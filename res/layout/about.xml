    				  android:layout_height="wrap_content"></TextView>
    		<TextView android:layout_width="wrap_content" android:id="@+id/contactEmail" android:text="@string/email"
    				  android:capitalize="none" android:layout_gravity="center_horizontal" android:layout_height="wrap_content"
    				  android:autoLink="email"></TextView>
    		
    		<TextView android:layout_width="wrap_content" android:id="@+id/license" android:text="    License"
    				  android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="10dp"></TextView>
